<Page x:Class="CRM_MINIBASICO.Catalogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRM_MINIBASICO"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Catalogo">

	<Grid Background="#BFD7FF">
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<TextBlock Text="CATALOGO" Foreground="White" FontSize="36" FontWeight="Bold" Grid.Column="0"/>
			<StackPanel x:Name="Bar_Menu_Buttons" Visibility="Visible" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="3">
				<Button Content="LISTA"		FontSize="18"	Click="ToggleView_Click" Background="#788BFF"	Width="100"/>
				<Button Content="AGREGAR"	FontSize="18"	Click="Add_Click"		 Background="#788BFF"	Width="100"/>
				<Button Content="BORRAR"	FontSize="18"	Click="Delete_Click"	 Background="#788BFF"	Width="100"/>
				<Button Content="EDITAR"	FontSize="18"	Click="Update_Click"	 Background="#788BFF"	Width="100"/>
			</StackPanel>


			<Grid x:Name="Bar_Menu_List_Options"
						Grid.Column="1" 
						Visibility="Hidden" Height="30">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.5*"/>
					<ColumnDefinition Width="1.5*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>

				</Grid.ColumnDefinitions>
				<ComboBox x:Name="Buscar_ComboBox" Grid.Column="0" FontSize="16">
					<ComboBoxItem Content="Buscar por..."/>
					<ComboBoxItem Content="NOMBRE"/>
					<ComboBoxItem Content="MATRICULA"/>
				</ComboBox>

				<TextBox x:Name="Buscar_TextBox" Text="Escribe aqui..." Grid.Column="1" FontSize="16"/>
				<Button Content="BUSCAR" Click="Search_Click"  Grid.Column="2" FontSize="16"/>
				<Button Content="CREAR NUEVO" Click="ToggleView_Click" Grid.Column="3" FontSize="16"/>
			</Grid>
		</Grid>

		<StackPanel x:Name="MainContentGrid" Grid.Row="1" Visibility="Visible">
			<TextBlock Text="Nombre:" FontSize="24"		FontWeight="Bold"/>
			<TextBox x:Name="nombre"	FontSize="24"	/>
			<TextBlock Text="Matricula:" FontSize="24"	FontWeight="Bold"/>
			<StackPanel Orientation="Horizontal" >
				<Button Content="AUTOGENERAR MATRICULA" x:Name="autogenerarMatricula" Click="autogenerarMatricula_Click" FontSize="24"/>
				<TextBox x:Name="matricula"		Width="500" FontSize="24"/>
			</StackPanel>
			<TextBlock Text="Existencias"	FontSize="24" FontWeight="Bold"/>
			<TextBox x:Name="existencias"	 FontSize="24" />
			<TextBlock Text="Precios" FontWeight="Bold" FontSize="24"/>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Precio de Venta: "		FontSize="18" FontWeight="Bold"/>
				<TextBox x:Name="precio_venta"			FontSize="18" Width="100"/>
				<TextBlock Text="Precio de Compra: "	FontSize="18" FontWeight="Bold"/>
				<TextBox x:Name="precio_compra"			FontSize="18" Width="100"/>
				<TextBlock Text="Descuento permitido: " FontSize="18" FontWeight="Bold"/>
				<TextBox x:Name="descuento_permitido"	FontSize="18" Width="100"/>
			</StackPanel>
			<TextBlock Text="Descripción" FontSize="24"	FontWeight="Bold"/>
			<TextBox x:Name="descripcion" FontSize="18" Height="100"/>
			<StackPanel x:Name="zonaAdvertencias"  Margin="20" Visibility="Visible" >
				<TextBlock Text="Advertencias:" FontSize="24"/>
				<TextBox x:Name="advertencias" FontSize="24" Text="" Background="AliceBlue" Height="70" TextWrapping="Wrap"/>
				<Button x:Name="IgnoreWarnings" FontSize="24" Click="IgnoreWarnings_Click" Content="Ignorar advertencias menores"/>
			</StackPanel>
		</StackPanel>

		<Grid x:Name="CollectionTableGrid" Grid.Row="1" Visibility="Hidden">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="50"/>

			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBlock Text="Nombre"		FontSize="24" Grid.Column="0" Grid.Row="0" FontWeight="Bold"/>
			<TextBlock Text="Matricula"		FontSize="24" Grid.Column="1" Grid.Row="0" FontWeight="Bold"/>
			

			<TextBlock	Text="entry1"	x:Name="nombreEntry_1"	FontSize="18"	Grid.Column="0" Grid.Row="1" Background="LightGray"/>
			<TextBlock	Text="entry2"	x:Name="nombreEntry_2"	FontSize="18"	Grid.Column="0" Grid.Row="2" Background="White"/>
			<TextBlock	Text="entry3"	x:Name="nombreEntry_3"	FontSize="18"	Grid.Column="0" Grid.Row="3" Background="LightGray"/>
			<TextBlock	Text="entry4"	x:Name="nombreEntry_4"	FontSize="18"	Grid.Column="0" Grid.Row="4" Background="White"/>
			<TextBlock	Text="entry5"	x:Name="nombreEntry_5"	FontSize="18"	Grid.Column="0" Grid.Row="5" Background="LightGray"/>
			<TextBlock	Text="entry6"	x:Name="nombreEntry_6"	FontSize="18"	Grid.Column="0" Grid.Row="6" Background="White"/>
			<TextBlock	Text="entry7"	x:Name="nombreEntry_7"	FontSize="18"	Grid.Column="0" Grid.Row="7" Background="LightGray"/>
			<TextBlock	Text="entry8"	x:Name="nombreEntry_8"	FontSize="18"	Grid.Column="0" Grid.Row="8" Background="White"/>
			<TextBlock	Text="entry9"	x:Name="nombreEntry_9"	FontSize="18"	Grid.Column="0" Grid.Row="9" Background="LightGray"/>
			<TextBlock	Text="entry10"	x:Name="nombreEntry_10"	FontSize="18"	Grid.Column="0" Grid.Row="10" Background="White"/>

			<TextBlock	Text="entry1"	x:Name="matriculaEntry_1"	FontSize="18" Grid.Column="1" Grid.Row="1" Background="LightGray"/>
			<TextBlock	Text="entry2"	x:Name="matriculaEntry_2"	FontSize="18" Grid.Column="1" Grid.Row="2" Background="White"/>
			<TextBlock	Text="entry3"	x:Name="matriculaEntry_3"	FontSize="18" Grid.Column="1" Grid.Row="3" Background="LightGray"/>
			<TextBlock	Text="entry4"	x:Name="matriculaEntry_4"	FontSize="18" Grid.Column="1" Grid.Row="4" Background="White"/>
			<TextBlock	Text="entry5"	x:Name="matriculaEntry_5"	FontSize="18" Grid.Column="1" Grid.Row="5" Background="LightGray"/>
			<TextBlock	Text="entry6"	x:Name="matriculaEntry_6"	FontSize="18" Grid.Column="1" Grid.Row="6" Background="White"/>
			<TextBlock	Text="entry7"	x:Name="matriculaEntry_7"	FontSize="18" Grid.Column="1" Grid.Row="7" Background="LightGray"/>
			<TextBlock	Text="entry8"	x:Name="matriculaEntry_8"	FontSize="18" Grid.Column="1" Grid.Row="8" Background="White"/>
			<TextBlock	Text="entry9"	x:Name="matriculaEntry_9"	FontSize="18" Grid.Column="1" Grid.Row="9" Background="LightGray"/>
			<TextBlock	Text="entry10"	x:Name="matriculaEntry_10"	FontSize="18" Grid.Column="1" Grid.Row="10" Background="White"/>

			<StackPanel Orientation="Horizontal" Grid.Row="11" Height="30" Margin="25, 0, 0, 0">
				<Button Content="←" Name="LeftArrow" Click="LeftArrow_Click" FontSize="18"/>
				<TextBlock x:Name="page_number" Text="X - Z de 100" FontSize="18"/>
				<Button Content="→" Name="RightArrow" Click="RightArrow_Click" FontSize="18"/>
			</StackPanel>

			<Button x:Name="btn_view1"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="1"/>
			<Button x:Name="btn_view2"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="2"/>
			<Button x:Name="btn_view3"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="3"/>
			<Button x:Name="btn_view4"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="4"/>
			<Button x:Name="btn_view5"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="5"/>
			<Button x:Name="btn_view6"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="6"/>
			<Button x:Name="btn_view7"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="7"/>
			<Button x:Name="btn_view8"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="8"/>
			<Button x:Name="btn_view9"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="9"/>
			<Button x:Name="btn_view10"	Click="btn_view_Click"	FontSize="18" Content="VER" Grid.Column="4" Grid.Row="10"/>
		</Grid>
	</Grid>
</Page>
