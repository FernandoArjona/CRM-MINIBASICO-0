<Page x:Class="CRM_MINIBASICO.Activities.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRM_MINIBASICO.Activities"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <Grid Background="White">
		<StackPanel>
			<TextBlock Text="Bienvenido a tu CRM Minibásico" FontSize="28" FontWeight="Bold"/>
			<StackPanel Orientation="Horizontal">
				<Button Content="Leer Manuales" Height="200" Width="200" Margin="25"/>
				<Button Content="Ver Tutoriales" Height="200" Width="200" Margin="25"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Button Content="Ajustes"/>
				<Button Content="Sitio Web"/>
				<Button Content="Preguntas frecuentes"/>
			</StackPanel>
		</StackPanel>
    </Grid>
</Page>
