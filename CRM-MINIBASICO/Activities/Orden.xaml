<Page x:Class="CRM_MINIBASICO.Activities.Orden"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRM_MINIBASICO.Activities"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Orden">

	<!-- CONCEPTO TEXT, PRECIO_VENTA DOUBLE, PRECIO_CUBIERTO DOUBLE, FECHA_ENTREGA DATETIME, nota
	TEXT, CLIENTE_NOMBRE TEXT, CLIENTE_MATRICULA TEXT-->
	<Grid Background="#BFD7FF">
		<Grid>


			<Grid.RowDefinitions>
				<RowDefinition Height="50"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Text="ORDENES" Foreground="White" FontSize="36" FontWeight="Bold" Grid.Column="0"/>
				<StackPanel x:Name="Bar_Menu_Buttons" Visibility="Visible" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="3">
					<Button Content="LISTA"		FontSize="18"	Click="ToggleView_Click" Background="#788BFF"	Width="100"/>
					<Button Content="AGREGAR"	FontSize="18"	Click="Add_Click"		 Background="#788BFF"	Width="100"/>
					<Button Content="BORRAR"	FontSize="18"	Click="Delete_Click"	 Background="#788BFF"	Width="100"/>
					<Button Content="EDITAR"	FontSize="18"	Click="Update_Click"	 Background="#788BFF"	Width="100"/>
				</StackPanel>

				<Grid x:Name="Bar_Menu_List_Options"
						Grid.Column="1" 
						Visibility="Hidden" Height="30" Grid.ColumnSpan="2" Margin="0,10,0,11">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1.5*"/>
						<ColumnDefinition Width="1.5*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>

					</Grid.ColumnDefinitions>
					<ComboBox x:Name="Buscar_ComboBox" Grid.Column="0" FontSize="16">
						<ComboBoxItem Content="Buscar por..."/>
						<ComboBoxItem Content="CONCEPTO"/>
						<ComboBoxItem Content="MATRICULA"/>
						<ComboBoxItem Content="PRECIO DE VENTA"/>
						<ComboBoxItem Content="PAGO CUBIERTO"/>
						<ComboBoxItem Content="FECHA DE ENTREGA"/>
						<ComboBoxItem Content="nota"/>
						<ComboBoxItem Content="CLIENTE_NOMBRE"/>
						<ComboBoxItem Content="CLIENTE_MATRICULA"/>
					</ComboBox>

					<TextBox x:Name="Buscar_TextBox" FontSize="16" Text="Escribe aqui..." Grid.Column="1"/>
					<Button Content="BUSCAR" Click="Search_Click"  FontSize="16" Grid.Column="2" />
					<Button Content="CREAR NUEVO" Click="ToggleView_Click" FontSize="16"  Grid.Column="3"/>
				</Grid>
			</Grid>

			<!-- DATOS DE CONCEPTO -->
			<StackPanel x:Name="MainContentGrid" Grid.Row="1" Visibility="Visible">
				<TextBlock Text="Concepto:" FontSize="24"		FontWeight="Bold"/>
				<TextBox x:Name="concepto" FontSize="24"/>
				<TextBlock Text="Matricula:" FontSize="24"		FontWeight="Bold"/>
				<StackPanel Orientation="Horizontal" >
					<Button Content="AUTOGENERAR MATRICULA" x:Name="autogenerarMatricula" Click="autogenerarMatricula_Click" FontSize="24"/>
					<TextBox x:Name="matricula"		Width="500" FontSize="24"/>
				</StackPanel>
				<TextBlock Text="Precio de venta:"	FontWeight="Bold" FontSize="24"/>
				<TextBox x:Name="precio_venta" FontSize="24"/>
				<TextBlock Text="Pago cubierto:"	FontWeight="Bold" FontSize="24"/>
				<TextBox x:Name="pago_cliente" FontSize="24"/>

				<TextBlock Text="Fecha de entrega:"	FontWeight="Bold" FontSize="24"/>
				<StackPanel Orientation="Horizontal" >
					<TextBlock Text="Día" FontSize="24"/>
					<ComboBox x:Name="comboBox_dia" FontSize="24" Width="100"/>
					<TextBlock Text="Mes" FontSize="24" />
					<ComboBox x:Name="comboBox_mes" SelectionChanged="Date_SelectionChanged" FontSize="24" Width="100">
						<ComboBoxItem Content="Enero"/>
						<ComboBoxItem Content="Febrero"/>
						<ComboBoxItem Content="Marzo"/>
						<ComboBoxItem Content="Abril"/>
						<ComboBoxItem Content="Mayo"/>
						<ComboBoxItem Content="Junio"/>
						<ComboBoxItem Content="Julio"/>
						<ComboBoxItem Content="Agosto"/>
						<ComboBoxItem Content="Septiembre"/>
						<ComboBoxItem Content="Octubre"/>
						<ComboBoxItem Content="Novimbre"/>
						<ComboBoxItem Content="Diciembre"/>
					</ComboBox>
					<TextBlock Text="Año" FontSize="24"/>
					<ComboBox x:Name="comboBox_year" FontSize="24" SelectionChanged="Date_SelectionChanged" Width="100"/>
					<TextBlock Text="Hora" FontSize="24"/>
					<ComboBox x:Name="comboBox_hora" Width="100" FontSize="24"/>
					<TextBlock Text="Minutos" FontSize="24"/>
					<ComboBox x:Name="comboBox_minutos" Width="100" FontSize="24"/>
				</StackPanel>

				<TextBlock Text="Nota:" FontSize="24"	FontWeight="Bold"/>
				<TextBox x:Name="nota"  FontSize="24" Height="50"/>

				<TextBlock Text="Cliente" FontSize="24"	FontWeight="Bold"/>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Nombre cliente:" FontSize="24"/>
					<TextBox x:Name="cliente_nombre" Width="200" FontSize="24"/>
					<TextBlock Text="Matricula de cliente" FontSize="24"/>
					<TextBox x:Name="cliente_matricula" Width="200" FontSize="24"/>
				</StackPanel>
				<StackPanel x:Name="zonaAdvertencias"  Margin="20" Visibility="Visible" >
					<TextBlock FontSize="24" Text="Advertencias:"/>
					<TextBox FontSize="24" x:Name="advertencias" Text="" Background="AliceBlue" Height="70" TextWrapping="Wrap"/>
					<Button FontSize="24" x:Name="IgnoreWarnings" Click="IgnoreWarnings_Click" Content="Ignorar advertencias menores"/>
				</StackPanel>
			</StackPanel>

