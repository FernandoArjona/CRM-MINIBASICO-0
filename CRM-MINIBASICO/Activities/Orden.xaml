				<TextBlock	Text="entry10"	x:Name="matriculaEntry_10"	Grid.Column="1" Grid.Row="10" Background="White"/>

				<TextBlock	Text="entry1"	x:Name="precioVentaEntry_1"		Grid.Column="2" Grid.Row="1" Background="LightGray"/>
