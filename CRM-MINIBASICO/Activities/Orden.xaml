<Page x:Class="CRM_MINIBASICO.Activities.Orden"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRM_MINIBASICO.Activities"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orden">
	
	<!-- CONCEPTO TEXT, PRECIO_VENTA DOUBLE, PRECIO_CUBIERTO DOUBLE, FECHA_ENTREGA DATETIME, nota
	TEXT, CLIENTE_NOMBRE TEXT, CLIENTE_MATRICULA TEXT-->
	<Grid Background="White">
		<Grid>


			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="10*"/>
			</Grid.RowDefinitions>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="200"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Text="ORDENES" FontSize="20" FontWeight="Bold" Grid.Column="0"/>
				<StackPanel x:Name="Bar_Menu_Buttons" Visibility="Visible" Orientation="Horizontal" Grid.Column="2">
					<Button Content="LISTA"			Click="ToggleView_Click"	Width="50"/>
					<Button Content="AGREGAR"		Click="Add_Click"			Width="50"/>
					<Button Content="BORRAR"		Click="Delete_Click"		Width="50"/>
					<Button Content="ACTUALIZAR"	Click="Update_Click"		Width="50"/>
				</StackPanel>

				<Grid x:Name="Bar_Menu_List_Options"
						Grid.Column="1" 
						Visibility="Hidden" Height="20">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1.5*"/>
						<ColumnDefinition Width="1.5*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>

					</Grid.ColumnDefinitions>
					<ComboBox x:Name="Buscar_ComboBox" Grid.Column="0">
						<ComboBoxItem Content="Buscar por..."/>
						<ComboBoxItem Content="CONCEPTO"/>
						<ComboBoxItem Content="MATRICULA"/>
						<ComboBoxItem Content="PRECIO DE VENTA"/>
						<ComboBoxItem Content="PAGO CUBIERTO"/>
						<ComboBoxItem Content="FECHA DE ENTREGA"/>
						<ComboBoxItem Content="nota"/>
						<ComboBoxItem Content="CLIENTE_NOMBRE"/>
						<ComboBoxItem Content="CLIENTE_MATRICULA"/>
					</ComboBox>

					<TextBox x:Name="Buscar_TextBox" Text="Escribe aqui..." Grid.Column="1"/>
					<Button Content="BUSCAR" Click="Search_Click"  Grid.Column="2" />
					<Button Content="CREAR NUEVO" Click="ToggleView_Click" Grid.Column="3"/>
				</Grid>
			</Grid>

			<!-- DATOS DE CONCEPTO -->
			<StackPanel x:Name="MainContentGrid" Grid.Row="1" Visibility="Visible">
				<TextBlock Text="Concepto:"		FontWeight="Bold"/>
				<TextBox x:Name="concepto"/>
				<TextBlock Text="Matricula:"		FontWeight="Bold"/>
				<TextBox x:Name="matricula"/>
				<TextBlock Text="Precio de venta:"	FontWeight="Bold"/>
				<TextBox x:Name="precio_venta"/>
				<TextBlock Text="Pago cubierto:"	FontWeight="Bold"/>
				<TextBox x:Name="pago_cliente"/>

				<TextBlock Text="Fecha de entrega:"	FontWeight="Bold"/>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Día"/>
					<ComboBox x:Name="comboBox_dia" Width="100"/>
					<TextBlock Text="Mes"/>
					<ComboBox x:Name="comboBox_mes" SelectionChanged="Date_SelectionChanged" Width="100">
						<ComboBoxItem Content="Enero"/>
						<ComboBoxItem Content="Febrero"/>
						<ComboBoxItem Content="Marzo"/>
						<ComboBoxItem Content="Abril"/>
						<ComboBoxItem Content="Mayo"/>
						<ComboBoxItem Content="Junio"/>
						<ComboBoxItem Content="Julio"/>
						<ComboBoxItem Content="Agosto"/>
						<ComboBoxItem Content="Septiembre"/>
						<ComboBoxItem Content="Octubre"/>
						<ComboBoxItem Content="Novimbre"/>
						<ComboBoxItem Content="Diciembre"/>
					</ComboBox>
					<TextBlock Text="Año"/>
					<ComboBox x:Name="comboBox_year" SelectionChanged="Date_SelectionChanged" Width="100"/>
					<TextBlock Text="Hora"/>
					<ComboBox x:Name="comboBox_hora" Width="100"/>
					<TextBlock Text="Minutos"/>
					<ComboBox x:Name="comboBox_minutos" Width="100"/>
				</StackPanel>

				<TextBlock Text="nota:"	FontWeight="Bold"/>
				<TextBox x:Name="nota" Height="50"/>

				<TextBlock Text="Cliente"	FontWeight="Bold"/>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Nombre cliente:"/>
					<TextBox x:Name="cliente_nombre" Width="200"/>
					<TextBlock Text="Matricula de cliente"/>
					<TextBox x:Name="cliente_matricula" Width="200"/>
				</StackPanel>
				<StackPanel x:Name="zonaAdvertencias"  Margin="20" Visibility="Visible" >
					<TextBlock Text="Advertencias:"/>
					<TextBox x:Name="advertencias" Text="" Background="AliceBlue" Height="70" TextWrapping="Wrap"/>
					<Button x:Name="IgnoreWarnings" Click="IgnoreWarnings_Click" Content="Ignorar advertencias menores"/>
				</StackPanel>
			</StackPanel>

			<!-- VISTA PREVIA -->
			<Grid x:Name="CollectionTableGrid" Grid.Row="1" Visibility="Hidden">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="50"/>

				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<TextBlock Text="Concepto"					Grid.Column="0" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="Matricula"					Grid.Column="1" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="Precio de Venta"			Grid.Column="2" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="Pago cubierto"				Grid.Column="3" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="Fecha de entrega"			Grid.Column="4" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="Nombre de cliente"			Grid.Column="5" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="Matricula de cliente"		Grid.Column="6" Grid.Row="0" FontWeight="Bold"/>
				<TextBlock Text="nota"					Grid.Column="7" Grid.Row="0" FontWeight="Bold"/>


				<TextBlock	Text="entry1"	x:Name="conceptoEntry_1"		Grid.Column="0" Grid.Row="1" Background="LightGray"/>
