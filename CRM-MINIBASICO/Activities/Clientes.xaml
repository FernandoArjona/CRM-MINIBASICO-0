<Page x:Class="CRM_MINIBASICO.Clientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRM_MINIBASICO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Clientes">

	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="10*"/>
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="10*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<TextBlock Text="CLIENTES" FontSize="20" FontWeight="Bold" Grid.Column="0"/>
			<Button Content="VER TODOS" Grid.Column="1"/>
			<Button Content="AGREGAR" Click="Add_Click" Grid.Column="2"/>
		</Grid>

		<StackPanel Grid.Row="1" Visibility="Visible">
			<StackPanel Orientation="Horizontal">
				<Button Content="AUTOGENERAR MATRICULA"/>
				<TextBox x:Name="clientes_matricula"		Width="500"/>
			</StackPanel>
			<TextBlock Text="Nombre:"/>
			<TextBox x:Name="clientes_nombre" />
			<TextBlock Text="Correo:"/>
			<TextBox x:Name="clientes_email" />
			<TextBlock Text="Número de telefono:" x:Name="clientes_telefono_block"/>
			<TextBox x:Name="clientes_telefono"/>
			<TextBlock Text="Nota:"/>
			<TextBox x:Name="clientes_nota" />
			<StackPanel x:Name="clientes_zonaAdvertencias"  Margin="20" Visibility="Hidden" >
				<TextBlock Text="Advertencias:"/>
				<TextBox x:Name="clientes_advertencias" Text="" Background="AliceBlue" Height="100" TextWrapping="Wrap"/>
				<Button x:Name="IgnoreWarnings" Click="IgnoreWarnings_Click" Content="Ignorar advertencias menores"/>
			</StackPanel>
		</StackPanel>

		<Grid Grid.Row="1" Visibility="Hidden">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="10*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBlock	Text="cliente1" x:Name="cliente1"		Grid.Column="0" Grid.Row="0" Background="LightGray"/>
			<TextBlock	Text="cliente2" x:Name="cliente2"		Grid.Column="0" Grid.Row="1" Background="White"/>
			<TextBlock	Text="cliente3" x:Name="cliente3"		Grid.Column="0" Grid.Row="2" Background="LightGray"/>
			<TextBlock	Text="cliente4" x:Name="cliente4"		Grid.Column="0" Grid.Row="3" Background="White"/>
			<TextBlock	Text="cliente5" x:Name="cliente5"		Grid.Column="0" Grid.Row="4" Background="LightGray"/>
			<TextBlock	Text="cliente6" x:Name="cliente6"		Grid.Column="0" Grid.Row="5" Background="White"/>
			<TextBlock	Text="cliente7" x:Name="cliente7"		Grid.Column="0" Grid.Row="6" Background="LightGray"/>
			<TextBlock	Text="cliente8" x:Name="cliente8"		Grid.Column="0" Grid.Row="7" Background="White"/>
			<TextBlock	Text="cliente9" x:Name="cliente9"		Grid.Column="0" Grid.Row="8" Background="LightGray"/>
			<TextBlock	Text="cliente10" x:Name="cliente10"	Grid.Column="0" Grid.Row="9" Background="White"/>

			<StackPanel Orientation="Horizontal" Grid.Row="10" Height="20" Margin="25, 0, 0, 0">
				<Button Content="←"/>
				<TextBlock x:Name="page_number" Text="X - Z de 100"/>
				<Button Content="→"/>
			</StackPanel>

			<Button	Content="VER" x:Name="cliente1_button"		Grid.Column="1" Grid.Row="0"/>
			<Button	Content="VER" x:Name="cliente2_button"		Grid.Column="1" Grid.Row="1"/>
			<Button	Content="VER" x:Name="cliente3_button"		Grid.Column="1" Grid.Row="2"/>
			<Button	Content="VER" x:Name="cliente4_button"		Grid.Column="1" Grid.Row="3"/>
			<Button	Content="VER" x:Name="cliente5_button"		Grid.Column="1" Grid.Row="4"/>
			<Button	Content="VER" x:Name="cliente6_button"		Grid.Column="1" Grid.Row="5"/>
			<Button	Content="VER" x:Name="cliente7_button"		Grid.Column="1" Grid.Row="6"/>
			<Button	Content="VER" x:Name="cliente8_button"		Grid.Column="1" Grid.Row="7"/>
			<Button	Content="VER" x:Name="cliente9_button"		Grid.Column="1" Grid.Row="8"/>
			<Button	Content="VER" x:Name="cliente20_button"		Grid.Column="1" Grid.Row="9"/>
		</Grid>
	</Grid>

</Page>
